<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/f89bfc7ad1.js" crossorigin="anonymous"></script>

    <style>
      .card {
        border: none; 
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <!-- ユーザー情報 -->
        <div class="col-12">
          
            <div>
              <h2>User info</h2>
            </div>
              <div>
                <%= image_tag user.get_profile_image(100, 100), class: "img-thumbnail"  %>
              </div>
              <table class="table">
                <tbody>
                  <tr>
                    <td><strong>name</strong></td>
                    <td><strong><%= user.name %></strong></td>
                  </tr>
                  <tr>
                    <td><strong>introduction</strong></td>
                    <td><strong><%= user.introduction %></strong></td>
                  </tr>
                </tbody>
              </table>

              
                <div class="mt-3 card">
                  <%= link_to raw('<i class="fa-solid fa-user-gear" style="color: #787878;"></i></i>'), edit_user_path(user), class: "btn custom-button btn-block" %>
                </div>
              
            </div>


        <div class="col-12">
  　　　 　　<div class="card-header">
            <h2>New book</h2>
          </div>
          <div class="card-body">
          <% if @book.errors.any? %>
            <div class="alert alert-danger">
              <strong><%= @book.errors.count %> errors prohibited this book from being saved:</strong>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                 <li><%= message %></li>
               <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_with model: Book.new, local: true do |f| %>
            <div class="form-group">
              <label for="bookTitle">Title</label>
              <%= f.text_field :title, class: "form-control", id: "bookTitle" %>
            </div>
            <div class="form-group">
              <label for="bookOpinion">Opinion</label>
              <%= f.text_area :body, class: "form-control", id: "bookOpinion" %>
            </div>
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          <% end %>
         </div>
        </div>
      </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
