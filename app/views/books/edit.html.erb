<div class="card-body">
  <h1>Editing Book</h1>
  <%= form_with model: @book, local: true do |f| %>
    <div class="form-group">
      <label for="bookTitle">Title</label>
      <%= f.text_field :title, class: "form-control", id: "bookTitle" %>
    </div>
    
    <div class="form-group">
      <label for="bookOpinion">Opinion</label>
      <%= f.text_area :body, class: "form-control", id: "bookOpinion" %>
    </div>
    <%= f.submit 'Update Book', class: "btn btn-success" %>
  <% end %>
  
  <div>
  　<p><%= link_to 'Show', book_path(@book), class: "mr-1" %><span>|</span><%= link_to 'Back', books_path, class: "ml-1" %></p>
　</div>

</div>


